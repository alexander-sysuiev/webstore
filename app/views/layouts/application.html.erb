<!DOCTYPE html>
<html>
<head>
  <title>Webstore</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <div id="store-logo">
  	<%= image_tag "logo.jpg", :size => "100x100" %>
  </div>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="body-wrapper">
		<%= content_for?(:content) ? yield(:content) : yield %>
	</div>
  <div id="customer-cart">
    <%= render 'carts/cart' %>
  </div>

</body>
</html>
