<% content_for :header do%>
	<h1><div class="service-header"><%= @service.name %></div></h1>
<% end %>
<% if admin_signed_in? %>
	<div class="edit-link"><%= link_to 'Edit', edit_admin_service_path(@service) %></div>
<% end %>
<div class="service-picture">
	<%= image_tag @service.picture.present? ? @service.picture.photo.url(:preview) : '/images/tab.gif' %>
</div>
<div class="price">
	<%= "Price: #{format_price(@service.price)}" %>
</div>
<div class="description">
	<%= @service.description %>
</div>
<%= link_to 'Buy', '#', :class => 'buy-button', "data-product-id" => @service.id, "data-product-type" => 'service' %>