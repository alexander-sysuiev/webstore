<% if @services.any? %>
  <% @services.each_with_index do |service, index| %>
  	<% if index % 4 == 0 %>
  		<div class="goods-preview">
  	<% end %>

    <div class="service-preview">
    	<%= image_tag service.picture.photo.url(:thumb), :class => "service-image" %>
    	<div><%= "$#{service.price}" %></div>
    	<%= link_to service.name, category_service_path(service.category_id, service.id) %>
    </div>

     <% if index % 4 == 3 || service == @services.last%>
  		</div>
  	<% end %>
  <% end %>
<% else %>
  <h1>No services in database</h1>
<% end %>

<% content_for :header do%>
	<h1><%= @category.nil? ? 'All Services' : @category.name %></h1>
<% end %>
