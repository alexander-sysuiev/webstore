<% if session[:goods].present? && session[:goods].to_a.flatten[1].present?%>
	<% total_price = 0 %>
	<table>
		<% session[:goods].each do |type| %>
			<% if type[0] == 'boiler' %>
				<% type[1].each do |product| %>
					<% boiler = Boiler.find(product[0]) %>
					<% quantity = product[1] %>
					<% price = boiler.price * quantity %>
					<% total_price += price %>
					<tr class="cart-boiler">
						<td><%= "#{boiler.name}" %></td>
						<td>
							<%= link_to '+', '#', :class => 'buy-button',
												  "data-product-id" => boiler.id,
												  "data-product-type" => 'boiler' %>
							<%= "#{quantity}" %>
							<%= link_to '-', '#', :class => 'quantity-decrease',
												  "data-product-id" => boiler.id,
												  "data-product-type" => :boiler %>
						</td>
						<td><%= "$#{price}" %></td>

					</tr>
				<% end %>
			<% end %>
		<% end %>
		<tr class="cart-total">
			<td colspan="2">Total:</td>
			<td><%= "$#{total_price}" %></td>
		</tr>
		<tr class="cart-remove">
			<td colspan="3"><%= link_to 'Clear', "#", :class => "clear-cart" %></td>
		</tr>
	</table>
<% end %>